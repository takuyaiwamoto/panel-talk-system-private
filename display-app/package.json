{
  "name": "panel-talk-display",
  "version": "1.0.0",
  "description": "学会パネルトーク表示アプリ",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "pack": "electron-builder --dir"
  },
  "dependencies": {
    "electron": "^28.0.0",
    "socket.io-client": "^4.7.5"
  },
  "devDependencies": {
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.paneltalk.display",
    "productName": "Panel Talk Display",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules",
      "!dist"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    }
  }
}